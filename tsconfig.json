{
  "compilerOptions": {
    "module": "commonjs",
    // "target": "es2018",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/main/**/*",
    "src/workers/**/*",
    "index.js",
    "types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
